

<div class="container-fluid mt-5">
  <div class="row">

    <div class="col-md-4 text-center align-self-center" >
        <p class="h2 mb-4">
            Burgers on the menu!:
        </p>
      <ul style="list-style-type: none;" class="h2">
        {{#each burgers}}
        {{#unless this.devoured}}
        <li>
          <p>{{this.burger_name}}
            <button id="devourBtn" data-id={{this.id}} class="devour rounded bg-danger h4" type="submit">Devour</button>
          </p>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-4 justify-content-center text-center mt-5">
        <img src="/assets/img/burger.jpg" alt="Giant burger" class="rounded">
        <h1 class="title mt-3" style="text-align: center">Eat-Da-Burger!!</h1>
    </div> 

    <div class="col-md-4 text-center align-self-center">
        <p class="h2 mb-4">
            Burgers Devoured!:
        </p>
      <ul style="list-style-type: none;" class="h2">
        {{#each burgers}}
        {{#if this.devoured}}
        <li>
          <h3>mmmmmm!</h3>
          <p>{{this.burger_name}}</p>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
</div>

<div class="container-fluid mt-5">
      <div class="row">
          <div class="col-12 text-center">
            <label for="ca" class="h2">Add a Burger to the menu!: </label>
          </div>
          <div class="col-12 text-center mb-5">
            <input type="text" id="add" class="rounded" name="name" data-eaten="0">
            <button id="addBurger"  class="rounded bg-danger" type="submit">Add</button> 
          </div>
      </div>
</div>
